# https://github.com/paulirish/git-open
alias gop="git open"

# https://github.com/paulirish/git-recent
alias gre="git recent"

# https://github.com/drewbrokke/jack-cli
alias j="jack --pretty=format:'* %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset' --abbrev-commit --date=relative -n 100"

############################################################
# Utilities
############################################################

# Get macOS Software Updates, and update installed Ruby gems, Homebrew, npm, and their installed packages
# @source https://github.com/mathiasbynens/dotfiles/blob/master/.aliases#L56
alias updateall='sudo softwareupdate -i -a; brew update; brew upgrade; brew cleanup; npm install npm -g; npm update -g; sudo gem update --system; sudo gem update; sudo gem cleanup'

# Get IP Address
# @source http://stackoverflow.com/a/13322549/5092054
alias ip="ifconfig | grep -Eo 'inet (addr:)?([0-9]*\.){3}[0-9]*' | grep -Eo '([0-9]*\.){3}[0-9]*' | grep -v '127.0.0.1'"
alias ipc="ip | pbcopy"

# Empty the Trash on all mounted volumes and the main HDD. then clear the useless sleepimage
# @source https://github.com/paulirish/dotfiles/blob/master/.aliases
alias emptytrash=" \
    sudo rm -rfv /Volumes/*/.Trashes; \
    rm -rfv ~/.Trash/*; \
    sudo rm -v /private/var/vm/sleepimage; \
"

