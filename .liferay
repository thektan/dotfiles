			title=""
		fi;

		# Get ticket type emoji
		if [ "$type" = "Story" ]; then
			typeEmoji="ğŸ“—"
		fi;

		# Get ticket type emoji
		if [ "$type" = "Bug" ] || [ "$type" = "Regression Bug" ]; then
			typeEmoji="ğŸ"
		fi;

		# Build message
		# message="**$typeEmoji [$ticket](https://liferay.atlassian.net/browse/$ticket) ($title)**"
