		message="[$ticket ($title)](https://liferay.atlassian.net/browse/$ticket)"

		# Copy message to clipboard
		echo $message | pbcopy;

		# Success message
		echo "ğŸ“‹ Copied to clipboard:";
		echo "$message";
	fi
}

